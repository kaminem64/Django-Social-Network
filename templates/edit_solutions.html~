<script type="text/javascript">
$(document).ready(function() {

$("#id_problem_desc").ckeditor({'toolbar': 'EditSolution'});
$("#id_solution").ckeditor({'toolbar': 'EditSolution'});

			$('select.uiselectmenu').selectmenu({
				icons: [
					{find: ''}
				],
				bgImage: function() {
					return 'url("{{STATIC_URL}}/images/search-icon.png")';
				}
			});

$("#mytags").tagit({
  singleField: true,
  singleFieldNode: $('#id_tags'),
  tagSource: function(search, showChoices) {
    $.ajax({
      url: "/ajax/jauto/",
      data: {search: search.term},
      success: function(choices) {
        showChoices(choices);
      }
    });
  }
})  .css({
       'outline' : 'none',
        'cursor' : 'text'
  });
  
});
</script>
{% endblock %}


